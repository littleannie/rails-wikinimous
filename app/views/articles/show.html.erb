<div class="container">
  <div class="card m-2" style="width: 18rem;">
    <div class="card-body">
      <h1 class="card-title"><%= @article.title %></h1>
      <p class="card-title"><%= @article.content %></p>
      <%= link_to 'Edit article', edit_article_path(@article), :class => "btn btn-primary p-2" %>
      <%= link_to 'View all articles', articles_path, :class => "btn btn-outline-secondary p-2" %>
    </div>
  </div>
</div>
